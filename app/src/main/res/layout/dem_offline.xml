<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/offlinedemo_cityinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/offlinedemo_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/offlinedemo_cityinfo"
        android:layout_below="@+id/offlinedemo_cityinfo"
        android:text="TextView"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/offlinedemo_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/offlinedemo_status"
        android:text="TextView"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/offlinedemo_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/offlinedemo_process"
        android:text="开始" />

    <Button
        android:id="@+id/offlinedemo_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/offlinedemo_process"
        android:layout_centerHorizontal="true"
        android:text="暂停" />

    <Button
        android:id="@+id/offlinedemo_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/offlinedemo_process"
        android:text="移除当前城市" />

</RelativeLayout>
